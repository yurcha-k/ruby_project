      <%= f.label :text %>
      <%= f.text_area :text %>
    </div>
    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] } %>
    </div>
    <%= f.submit %>
  <% end %>
</div>